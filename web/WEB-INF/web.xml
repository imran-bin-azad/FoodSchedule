<?xml version="1.0" encoding="UTF-8"?>
<web-app xmlns="http://java.sun.com/xml/ns/javaee"
           xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
           xsi:schemaLocation="http://java.sun.com/xml/ns/javaee
		  http://java.sun.com/xml/ns/javaee/web-app_2_5.xsd"
           version="2.5">

    <error-page>
        <error-code>404</error-code>
        <location>/WEB-INF/jsp/pageNotFound.jsp</location>
    </error-page>

    <error-page>
        <error-code>500</error-code>
        <location>/WEB-INF/jsp/internalError.jsp</location>
    </error-page>


    <context-param>
        <param-name>WelcomePage</param-name>
        <param-value>/WEB-INF/jsp/home.jsp</param-value>
    </context-param>

    <context-param>
        <param-name>LoginPage</param-name>
        <param-value>/WEB-INF/jsp/login.jsp</param-value>
    </context-param>

    <context-param>
        <param-name>MealPlan</param-name>
        <param-value>/WEB-INF/jsp/showPlan.jsp</param-value>
    </context-param>

    <context-param>
        <param-name>UpdatePage</param-name>
        <param-value>/WEB-INF/jsp/updatePlan.jsp</param-value>
    </context-param>
</web-app>
